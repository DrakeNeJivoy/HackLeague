<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Круг для аватарки пользователя -->
        <ImageView
            android:id="@+id/user_avatar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/user"
            android:onClick="onAvatarClick"/>

        <!-- Почта пользователя -->
        <TextView
            android:id="@+id/user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="user@example.com"
            android:textSize="18sp"
            android:textColor="#000"
            android:gravity="center"/>

        <!-- Ник пользователя -->
        <TextView
            android:id="@+id/user_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="UserNickname"
            android:textSize="18sp"
            android:textColor="#000"
            android:gravity="center"/>

        <!-- Кнопка с плюсиком и текст "Управление командами" -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="32dp">

            <ImageButton
                android:id="@+id/manage_teams_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/baseline_mode_edit_outline_24"
                android:contentDescription="Управление командами"
                android:onClick="onManageTeamsClick"/>

            <TextView
                android:id="@+id/manage_teams_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Управление командами"
                android:textSize="16sp"
                android:textColor="#000"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Кнопка для создания группы -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="32dp">

            <ImageButton
                android:id="@+id/create_group_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/baseline_mode_edit_outline_24"  /><!-- Замените на нужный вам ресурс -->/>

            <TextView
                android:id="@+id/create_group_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Создать группу"
                android:textSize="16sp"
                android:textColor="#000"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>

    <!-- Нижняя навигация -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navigation_menu" />

</RelativeLayout>
